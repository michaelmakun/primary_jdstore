<tr>
  <td><%= product.id %></td>
  <td>
    <div class="col-xs-6 col-md-3">
      <%= link_to admin_product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
    </div>
  </td>
  <td><%= product.title %></td>
  <td><%= product.price %></td>
  <td>
    <%= link_to("编缉", edit_admin_product_path(product), class: "btn btn-xs btn-success") %>
    <%= link_to("删除", admin_product_path(product), method: :delete, class: "btn btn-xs btn-danger") %>
  </td>
</tr>
