<tr>
  <td><%= product.id %></td>
  <td><%= link_to(product.title, admin_product_path(product)) %></td>
  <td><%= render_product_description(product) %></td>
  <td><%= product.quantity %></td>
  <td><%= product.price %></td>
  <td>
    <%= link_to("编缉", edit_admin_product_path(product), class: "btn btn-xs btn-success") %>
    <%= link_to("删除", admin_product_path(product), method: :delete, class: "btn btn-xs btn-danger") %>
  </td>
  <td><%= product.created_at %></td>
</tr>
