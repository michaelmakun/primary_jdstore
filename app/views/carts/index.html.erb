<div class="row">
  <div class="col-md-12">

    <%= link_to("清空购物车", clean_carts_path, method: :delete, class: "btn btn-warning btn-sm pull-right", data: { confirm: "确定要清空购物车吗？"}) %>

    <h2>购物车</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品资讯</th>
          <th>单价</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>
        <%= render :partial => "cart_item", :collection => current_cart.cart_items, :as => :cart_item %>
      </tbody>
    </table>
    <br>
    <div class="total clearfix">
      <span class="pull-right">
        <span>总计 <%= render_cart_total_price(current_cart) %> RMB </span>
      </span>
    </div>

    <hr>

    <div class="checkout clearfix">
      <%= link_to("确认结帐", "#", method: :post, class: "btn btn-lg btn-danger") %>
    </div>
  </div>
</div>
