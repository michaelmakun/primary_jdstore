<div class="row">
  <div class="col-md-12">

    <h2>购物明细</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明细</th>
          <th>单价</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>
        <%= render :partial => "checkout_item", :collection => current_cart.cart_items, :as => :cart_item %>
      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        总计 <%= render_cart_total_price(current_cart) %> CNY
      </span>
    </div>

    <hr>

    <h2>订单资讯</h2>

    <div class="order-form">
      <%= render "checkout" %>
    </div>
  </div>
</div>
